<h1 id="the-heading">Create your amazing account!</h1>
<div class = "row">
  <div class = "col-sm-12">
    <form id = "static-form" ref='uploadForm' 
     id='uploadForm' 
     action='http://localhost:3000/hannibal/user' 
     method='post' 
     encType="multipart/form-data">
      <div class = "form-group">
        <label for="user_name">Please type username: </label><br>
        <input type="text" name="user_name" id="user_name" placeholder="Username"/>
        {{#if message}}
          <div id="error_username">{{message}}</div>
        {{/if}}<br><br>
      </div>
      
      <div class = "form-group">
        <label for="user_pass">Please type password: </label><br>
        <input type="password" name="user_pass" id="user_pass" placeholder="Password"/><br><br>
      </div>
      
      <div class = "form-group">
        <label for="contact_email">Please type email: </label><br>
        <input type="email" name="contact_email" id="contact_email" placeholder="Email"/><br><br>
      </div>

      <input type="submit" class="btn btn-success" value='Sign Up!' /> <a class="btn btn-danger" href="http://localhost:3000/hannibal/login" role="button">Go Back to Login!</a>
    </form>    

  </div>
</div> 

